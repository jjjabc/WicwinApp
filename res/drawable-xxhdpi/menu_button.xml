<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><layer-list>
            <item><shape>
                    <solid android:color="#ddd" />

                    <corners android:radius="5dp" />

                    <stroke android:width="1dp" android:color="#ddd" />

                    <padding android:left="7dp" android:right="7dp" />
                </shape></item>
            <item android:top="-20dp"><shape android:shape="line">
                    <stroke android:width="3dp" android:color="#888" />

                    <size android:height="100dp" />
                </shape></item>
            <item android:top="0dp"><shape android:shape="line">
                    <stroke android:width="3dp" android:color="#888" />

                    <size android:height="100dp" />
                </shape></item>
            <item android:top="20dp"><shape android:shape="line">
                    <stroke android:width="3dp" android:color="#888" />

                    <size android:height="100dp" />
                </shape></item>
        </layer-list></item>
    <item><layer-list>
            <item><shape>
                    <solid android:color="#ffffff" />

                    <corners android:radius="5dp" />

                    <stroke android:width="1dp" android:color="#ddd" />

                    <padding android:left="7dp" android:right="7dp" />
                </shape></item>
            <item android:top="-20dp"><shape android:shape="line">
                    <stroke android:width="3dp" android:color="#888" />

                    <size android:height="100dp" />
                </shape></item>
            <item android:top="0dp"><shape android:shape="line">
                    <stroke android:width="3dp" android:color="#888" />

                    <size android:height="100dp" />
                </shape></item>
            <item android:top="20dp"><shape android:shape="line">
                    <stroke android:width="3dp" android:color="#888" />

                    <size android:height="100dp" />
                </shape></item>
        </layer-list></item>

</selector>