<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="topBar">
        <item name="android:layout_height">@dimen/top_bar_height</item>
        <item name="android:background">#ffffff</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="bottomBar">
        <item name="android:padding">0dp</item><item name="android:background">#222222</item><item name="android:layout_height">@dimen/bottom_bar_height</item>
    </style>
    <style name="index">
        <item name="android:background">#000000</item>
        <item name="android:color">#ffffff</item>
        <item name="android:scrollbars">none</item>
    </style>
    <style name="indexText"><item name="android:textColor">#ffffff</item>
    <item name="android:textSize">20sp</item>
    <item name="android:textStyle">bold</item>
</style>
    <style name="imgResponsive">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

</resources>
